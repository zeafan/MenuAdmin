<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".activity.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/s_12_14_16"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/d_3_5_7_10"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/d_3_5_7_10"
        app:cardCornerRadius="@dimen/d_3_5_7_10"
        app:contentPadding="@dimen/s_2_3_4"
        app:cardBackgroundColor="@color/WhiteSmoke"
        android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/ln_products"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_50_60_70">
    <ImageView
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:layout_width="@dimen/d_25_30_40"
        android:layout_height="@dimen/d_25_30_40"
        android:src="@drawable/list_item"
        />
    <TextView
        android:paddingStart="@dimen/d_3_5_7_10"
        android:paddingEnd="@dimen/d_3_5_7_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/products"
        android:textColor="@color/Gray_2"
        android:textSize="@dimen/s_18_20_24"
        android:gravity="center_vertical"
        />
</LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/d_3_5_7_10"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/d_3_5_7_10"
        app:cardCornerRadius="@dimen/d_3_5_7_10"
        app:contentPadding="@dimen/s_2_3_4"
        app:cardBackgroundColor="@color/WhiteSmoke"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_groups"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50_60_70">
        <ImageView
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="@dimen/d_25_30_40"
            android:layout_height="@dimen/d_25_30_40"
            android:src="@drawable/qty_dark"
            />
        <TextView
            android:paddingStart="@dimen/d_3_5_7_10"
            android:paddingEnd="@dimen/d_3_5_7_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/group"
            android:textColor="@color/Gray_2"
            android:textSize="@dimen/s_18_20_24"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/d_3_5_7_10"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/d_3_5_7_10"
        app:cardCornerRadius="@dimen/d_3_5_7_10"
        app:contentPadding="@dimen/s_2_3_4"
        app:cardBackgroundColor="@color/WhiteSmoke"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_uuid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/d_25_30_40"
                />
                <ImageButton
                    android:id="@+id/ib_share2"
                    android:layout_gravity="center"
                    android:background="@drawable/sharing"
                    android:scaleType="centerInside"
                    android:layout_width="@dimen/d_25_30_40"
                    android:layout_height="@dimen/d_25_30_40"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_qr"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_width="@dimen/d_230_280_330"
                android:layout_height="@dimen/d_230_280_330"
                />
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/s_18_20_24"
                android:layout_margin="@dimen/d_3_5_7_10"
                android:layout_width="wrap_content"
                app:cardElevation="@dimen/d_3_5_7_10"
                app:cardCornerRadius="@dimen/d_3_5_7_10"
                android:layout_gravity="center"
                app:contentPadding="@dimen/s_2_3_4"
                app:cardBackgroundColor="@color/AntiqueWhite"
                android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_share"
            android:layout_gravity="center"
            android:background="@drawable/sharing"
            android:scaleType="centerInside"
            android:layout_width="@dimen/d_40_45_55"
            android:layout_height="@dimen/d_40_45_55"
            />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pg_qr"
            android:layout_gravity="center"
            android:layout_width="@dimen/s_30_35_45"
            android:layout_height="@dimen/s_30_35_45"/>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>